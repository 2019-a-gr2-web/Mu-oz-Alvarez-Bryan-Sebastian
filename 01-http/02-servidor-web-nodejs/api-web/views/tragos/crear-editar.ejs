<p>Crea un nuevo trago.</p>

<form
        action="/api/traguito/crear"
        method="post">

    <label for="nombreId">Nombre</label>
    <input id="nombreId" name="nombre" type ="text"> <!--nunca olvidarse de que en un formulario debe ir el nombre-->

    <a href="/api/traguito/lista">

        <button type=""button>Cancelar</button>

    </a>

    <br>
    <br>

    <label for="tipoId">Tipo trago</label>
    <select name="tipo" id="tipoId">
        <option value="Ron">Roncito</option>
        <option value="Vodka">Vodkita</option>
        <option value="Tequila">Tequilita</option>
        <option value="Whiskey">Whiskycito</option>
        <option value="Puntas">Puntitas</option>
        <option value="Cerveza">Chelitas</option>

    </select>

    <br>
    <br>

    <label for="gradosId">Grados de alcohol</label>
    <input id="gradosId" name="gradosAlcohol" type ="number" min="0" max="100" step="0.01">

    <br>
    <br>

    <label for="fechaCaducidadId">Fecha Caducidad</label>
    <input id="fechaCaducidadId" name="fechaCaducidad" type ="date">

    <br>
    <br>

    <label for="precioId">Precio</label>
    <input id="precioId" name="precio" type ="number" min="0" step="0.01">

    <br>
    <br>

    <!--<button type="reset">Reset</button>
    <button type="submit">Submit</button>-->


    <button>Enviar Informacion</button>

</form>

