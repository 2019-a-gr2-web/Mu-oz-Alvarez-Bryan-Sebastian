<section>
    <br>
    <br>
    <h1 style="text-align: center">Ingresar un Estudiante</h1>
    <div class="container" >
        <div class="mt-5 d-flex justify-content-center">
            <form action="/examen/crearConductor" method="post"> <!--Cambiar-->

                <form action="/examen/crearConductor" method="post"> <!--Cambiar-->

                    <div class="row">
                        <div class="col-sm-12 md-auto">
                            <label for="nombresEstudianteId">Nombres </label> <!--Cambiar-->
                            <input id="nombresEstudianteId" name="nombres" type="text" style="width: 400px"> <!--Cambiar-->
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 md-auto">
                            <label for="apellidosEstudianteId">Apellidos </label>
                            <input id="apellidosEstudianteId" name="apellidos" type="text" style="width: 400px">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 md-auto">
                            <label for="fechaNacimientoId">Fecha de Nacimiento</label>
                            <input id="fechaNacimientoId" name="fechaNacimiento" type="date" style="width: 300px">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 md-auto">
                            <label for="semestreActualId">Semestre Actual</label>
                            <input id="semestreActualId" name="semestreActual" type="number" min="0" style="width: 330px">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 md-auto">
                            <label for="graduadoId">Graduado</label>
                            <input id="graduadoId" name="graduado" type="radio" >
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6 md-auto">
                            <a href="/examen/conductores"><!--Cambiar-->
                                <button class="btn-app" type="button" style="width: 180px">Cancelar</button>
                            </a>
                        </div>
                        <div class="col-sm-6 md-auto">
                            <button class="btn-app" type="submit" style="width: 180px">Enviar</button>
                        </div>
                    </div>
                </form>
            </form>
        </div>
    </div>
</section>

